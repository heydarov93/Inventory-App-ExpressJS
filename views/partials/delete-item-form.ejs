<div>
  <h3>Delete item <%= item.item_name %></h3>
  <form action="/items/<%= item.item_id %>/delete" method="post">
    <div>
      <label for="secret_key<%= item.item_id %>">Secret Key</label>
      <div>
        <input type="password" id="secret_key<%= item.item_id %>" name="secret_key" placeholder="Enter your secret key to confirm deletion" />
      </div>
      <%- include("input-error", {input_name: "secret_key"}) %>
    </div>
    <button type="submit">delete</button>
  </form>
</div>